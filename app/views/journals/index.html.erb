  <h1>Journals#index</h1>
  <p>Find me in app/views/journals/index.html.erb</p>
  <h2>Your Travel Journals</h2>

<%= link_to "Create New Journal", new_user_journal_path %>

<table>
  <tr>
    <th>
      Journal Title
    </th>
    <th>
      Date Created
    </th>
    <th>
      Number of Entries
    </th>
    <th>
    </th>
  </tr>
  <% for journal in @journals %>
    <tr>
      <td><a href="/users/<%= current_user.id %>/journals/<%= journal.id %>"><%= journal.title %></a></td>
      <td><%= journal.created_at.to_date %></td>
      <td><%= journal.entries.count %></td>
      <td>
        <%= link_to "Delete Journal", user_journal_path(current_user, journal), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>